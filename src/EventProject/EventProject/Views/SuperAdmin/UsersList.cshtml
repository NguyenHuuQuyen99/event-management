@model IEnumerable<EventProject.Models.UserViewModel>

@{
    ViewBag.Title = "Users List";
}

<h2>Users List</h2>

<p>
    @Html.ActionLink("Create New User", "CreateUser")
</p>
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            User ID
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            Gender
        </th>
        <th>
            Role
        </th>
        <th>
            Major
        </th>
        <th>
            InActive
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.Role != "SAdmin")
    {
        <tr>
            <td>
                <img src="@Url.Content(item.ImageURL)" alt="Image" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MajorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateUser", new { id = item.UserID })
            </td>
        </tr>
    }
}

</table>
