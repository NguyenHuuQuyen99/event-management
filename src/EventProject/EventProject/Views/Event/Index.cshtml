@model IEnumerable<EventProject.Models.EventViewModel>

@{
    ViewBag.Title = "Event";
}

<h2>Index</h2>

@if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            Event Name
        </th>
        <th>
            Address
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
            Status
        </th>
        @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
        {
            <th>
                InActive
            </th>
        }
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
         @if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
         {
        <td>
            @Html.DisplayFor(modelItem => item.IsInActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EventID }) |
            @Html.ActionLink("Details", "Details", new { id = item.EventID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
        </td>
         }
    </tr>
}

</table>
